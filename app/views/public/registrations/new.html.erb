<div class='container'>
  <div class='row justify-content-md-center'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>新規登録</h2>

      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <br><label for="Name">名前</label>
          <%= f.text_field :name,class:"col form-control" %>
        </div>

        <div class="form-group">
          <br><label for="Email">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exanple.com",class:"col form-control" %>
        </div>

        <div class="form-group">
          <br><label for="password">パスワード</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class:"col form-control" %>
        </div>

        <div class="form-group">
          <br><label for="password">パスワード(確認)</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col form-control" %>
        </div>

        <div class="actions">
          <br><%= f.submit "新規登録", class: "btn btn-primary btn-sm w-25" %>
        </div>
      <% end %>

      <!--<%= render "public/shared/links" %>-->

    </div>
  </div>
</div>