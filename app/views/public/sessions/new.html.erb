<div class='container'>
  <div class='row justify-content-md-center'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>ログイン</h2>

      <%= form_with model: @user, url: user_session_path do |f| %>

        <div class="form-group">
          <br><label for="Email">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exanple.com" ,class:"col form-control"%>
        </div>

        <div class="form-group">
          <br><label for="Password">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password" ,class:"col form-control"%>
        </div>

        <div class="actions">
          <br><%= f.submit "ログイン", class: "btn btn-primary btn-sm w-25" %>
        </div>
      <% end %>

      <!--<%= render "public/shared/links" %>-->

    </div>
  </div>
</div>
