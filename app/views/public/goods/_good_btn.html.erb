<% unless user_signed_in? %>
  いいね <i class="far fa-thumbs-up" aria-hidden="true"></i>
  <%= review.goods.count %>
<% else%>
  <% if review.good_by?(current_user) %>
    <%= link_to review_goods_path(review), method: :delete, remote: true do %>
      いいね　<i class="fas fa-thumbs-up" aria-hidden="true"></i>
      <%= review.goods.count %>
    <% end %>
  <% else %>
    <%= link_to review_goods_path(review), method: :post, remote: true do %>
      いいね　<i class="far fa-thumbs-up" aria-hidden="true"></i>
      <%= review.goods.count %>
    <% end %>
  <% end %>
<% end %>