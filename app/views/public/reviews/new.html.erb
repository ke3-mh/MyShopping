<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2 class="page-title px-3">投稿内容入力</h2>

      <!--入力フォーム-->
      <%= form_with model: @review do |f| %>
        <%= render 'layouts/errors', obj: @review %>

        <div class="form-group">
          <%= f.label :item_image %>
          <div id="new-image"><%= image_tag 'no_review_image.jpg', size: '500x400', id: "item_image_prev" %></div>
          <%= f.file_field :item_image %>
          <script type="text/javascript">
            $(function() {
              function readURL(input) {
                if (input.files && input.files[0]) {
                  var reader = new FileReader();
                  reader.onload = function (e) {
                    $('#item_image_prev').attr('src', e.target.result);
                  }
                  reader.readAsDataURL(input.files[0]);
                }
              }
              $("#review_item_image").change(function() {
                readURL(this);
              });
            });
          </script>
        </div>

        <div class="form-group">
          <%= f.label :Tag %>
          <%= f.text_field :tag, placeholder: "商品のカテゴリー", class: 'form-control review_tag' %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: "商品名", class: 'form-control review_name' %>
        </div>

        <div class="form-group">
          <%= f.label :caption %>
          <%= f.text_area :caption, placeholder: "評価・コメント", class: 'form-control review_caption' %>
        </div>

        <div class="form-group">
          <%= f.submit "投稿", class: 'btn btn-success'%>
        </div>
      <% end %>

    </div>
  </div>
</div>
