
<% if user_signed_in? %>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <%= render 'public/users/info', user: current_user %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>投稿一覧</h2>
        <%= render 'sort' %>
        <%= render 'review_index', reviews:@reviews %>
      </div>
    </div>
  </div>
<% else %>
  <div class='container px-5 px-sm-0'>
    <div class='row justify-content-center'>
      <div class='col-md-8 '>
        <h2>投稿一覧</h2>
        <%= render 'sort' %>
        <%= render 'review_index', reviews:@reviews %>
      </div>
    </div>
  </div>
<% end %>