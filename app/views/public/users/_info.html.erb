<% if user_signed_in? %>
  <h2>User info</h2>
  <div class="card">
    <div class="card-body">
      <p class="card-text d-flex justify-content-center">Log in</p>
      <hr>
      <div class="d-flex align-items-center justify-content-center">
        <%= image_tag user.get_profile_image(100,100) %>
      </div>
      <div class="card-text d-flex justify-content-center"><%= user.name %></div>
      <hr>
      <p class="card-text d-flex justify-content-center"><%= link_to "いいね👍 #{user.goods.count}", users_goods_path %></p>
      <p class="card-text d-flex justify-content-center"><%= link_to "投稿数📁 #{user.reviews.count}", users_path %></p>
      <p class="card-text d-flex justify-content-end">
        <%= link_to new_review_path do %>
          <i class="fas fa-plus-circle fa-2x"></i>
        <% end %>
      </p>
    </div>
  </div>
<% end %>