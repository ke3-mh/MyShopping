<header>
  <nav class="navbar navbar-expand-lg navbar-dark ", style="background-color: #009b9f;">
    <div class="container">
      <a class="navbar-brand" href="/"><span data-toggle="tooltip" data-placement="top" title="Top"><%= image_tag 'cart.png' , :size => '28x28' %>MyShopping</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= render 'layouts/tag_search' %>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to users_mypage_path,class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> My Page
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> logout
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> Sign up
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> Login
            <% end %>
          </li>
          <li>
            <%= link_to users_guest_sign_in_path, method: :post ,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> Guest Login
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

